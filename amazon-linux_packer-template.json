{
    "variables": {
        "aws_region": "{{env `AWS_REGION`}}",
        "aws_ami_name": "ubuntu-server_{{isotime \"02Jan2006\"}}"
    },

    "builders": [{
        "type": "amazon-ebs",
        "region": "{{user `aws_region`}}",
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu",
        "ami_name": "{{user `aws_ami_name`}}",
        "ami_description": "Customized Amazon Linux",
        "associate_public_ip_address": "true",
        "source_ami": "ami-cd0f5cb6"
    }],

    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sudo apt-get update -y",
                "sudo /usr/sbin/update-motd --disable",
                "echo 'No unauthorized access permitted' | sudo tee /etc/motd",
                "sudo rm /etc/issue",
                "sudo ln -s /etc/motd /etc/issue",
                "sudo apt-get install -y openssh-clients openssh-client openssh-server"
            ]
        }
    ]
}
